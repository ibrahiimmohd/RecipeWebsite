<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/Styles.css" />
    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div id="allPage">
        <header class="text-center">
            <img alt="Fresh logo" height="150" src="~/images/freshImage.gif" width="300">
        </header><br />
           <div>             
               <div class="text-right">
                   @if (User.Identity.IsAuthenticated)
                   {
                       <a class="btn btn-sm btn-primary"
                          asp-action="Logout" asp-controller="Account">Log Out</a>
                   }
               </div><br>
                                        
               @if (TempData["message"] != null)
               {
                   <div class="alert alert-success mt-1">@TempData["message"]</div>
               }
               @RenderBody()
           </div>
        <footer>
            <p id="copyright">&copy; Copyright Ibrahim Ali - COMP229 - Web Application Develoment - Assignment 3</p>
        </footer>
    </div>
</body>
</html>
