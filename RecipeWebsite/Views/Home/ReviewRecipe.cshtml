@model RecipeWebsite.Models.Review

@{
    ViewBag.Title = "Review Recipe";
}

<div class="panel-body">
    
    <form class="p-a-1" asp-action="ReviewRecipe" method="Post">
        <input type="hidden" asp-for="RecipeId" />
        <br>
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Rating">Provide Rating:</label>
            <input form-control" type="range" min="1" max="5" asp-for="Rating" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Provide Review:</label>
            <textarea class="form-control" cols="20" asp-for="Description" rows="3"></textarea>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Submit</button>
            <button type="reset" class="btn btn-sm btn-warning">Clear</button>
            <button asp-action="Index" class="btn btn-sm btn-danger">Cancel</button>
        </div><br>
    </form>
</div>

