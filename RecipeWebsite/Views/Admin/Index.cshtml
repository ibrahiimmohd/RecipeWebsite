@model IEnumerable<RecipeWebsite.Models.Recipe>

@{
    ViewBag.Title = "All Recipes";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>

        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.ID</td>
            <td>@item.RecipeName</td>

            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="recipeId" value="@item.ID" />

                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-recipeId="@item.ID">
                        Edit
                    </a>
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Recipe</a>
</div><br />

